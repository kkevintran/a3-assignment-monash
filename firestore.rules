rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function to get user role (only works if user document exists)
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }
    
    // Helper function to check if user is admin (safe - returns false if doc doesn't exist)
    function isAdmin() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             getUserRole() == 'admin';
    }
    
    // Users collection
    match /users/{userId} {
      // Allow users to create their own user document during signup
      // The document ID must match their auth UID
      allow create: if isAuthenticated() && isOwner(userId);
      
      // Allow users to read their own document
      allow read: if isAuthenticated() && (isOwner(userId) || isAdmin());
      
      // Allow users to update their own document
      allow update: if isAuthenticated() && isOwner(userId);
      
      // Allow admins to read any user document (handled in read rule above)
    }
    
    // Store collection (for contact form submissions)
    match /store/{documentId} {
      // Allow authenticated users to create documents
      allow create: if isAuthenticated();
      
      // Allow authenticated users to read (we'll add role-based restrictions later)
      // For now, allow all authenticated users to read
      allow read: if isAuthenticated();
      
      // Only admins can update/delete
      allow update, delete: if isAuthenticated() && isAdmin();
    }
    
    // Jobs collection
    match /jobs/{jobId} {
      // Anyone can read active jobs
      // Users can read jobs they posted
      // Users can read jobs where they are in the applicants array (for viewing their applications)
      // Admins can read any job
      allow read: if resource.data.status == 'active' || 
                  (isAuthenticated() && (
                    resource.data.postedBy == request.auth.uid || 
                    (resource.data.applicants != null && request.auth.uid in resource.data.applicants) ||
                    isAdmin()
                  ));
      
      // TEMPORARY: Allow any authenticated user to create jobs (for seeding)
      // TODO: Restrict this to only employers/admins after seeding:
      // allow create: if isAuthenticated() && 
      //               (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'employer' || 
      //                get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
      allow create: if isAuthenticated();
      
      // Only job poster or admin can update
      allow update: if isAuthenticated() && 
                    (resource.data.postedBy == request.auth.uid || isAdmin());
      
      // Only admin can delete
      allow delete: if isAuthenticated() && isAdmin();
      
      // Applications subcollection
      match /applications/{applicationId} {
        // Users can read their own applications
        // Job poster can read applications for their job
        // Admins can read any application
        allow read: if isAuthenticated() && 
                    (resource.data.userId == request.auth.uid || 
                     get(/databases/$(database)/documents/jobs/$(jobId)).data.postedBy == request.auth.uid ||
                     isAdmin());
        
        // Users can create their own applications
        allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
        
        // Job poster or admin can update application status
        allow update: if isAuthenticated() && 
                      (get(/databases/$(database)/documents/jobs/$(jobId)).data.postedBy == request.auth.uid ||
                       isAdmin());
      }
    }
  }
}


